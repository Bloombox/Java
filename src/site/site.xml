    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.6</version>
    </skin>

    <bannerLeft>
        <name>Bloombox for Java</name>
        <src>https://storage.googleapis.com/bloom-static/branding/java/logo-bloombox-java.png</src>
        <href>https://bloombox.github.io/Java</href>
    </bannerLeft>

    <publishDate position="right"/>
    <version position="right"/>

    <googleAnalyticsAccountId>UA-73412840-4</googleAnalyticsAccountId>

    <body>
        <menu name="Overview">
            <item name="Home" href="index.html" />
            <item name="Getting Started" href="getting-started.html" />
            <item name="API Keys" href="api-keys.html" />
            <item name="FAQ" href="faq.html" />
        </menu>

        <menu name="Services">
            <item name="Shop API" href="services/shop.html"/>
            <item name="Menu API" href="services/menu.html"/>
            <item name="Telemetry API" href="services/telemetry.html"/>
        </menu>

        <menu name="Examples">
            <item name="Java" href="https://github.com/Bloombox/Java/blob/master/example/src/main/java/io/bloombox/example/java/JavaClientExample.java"/>
            <item name="Kotlin" href="https://github.com/Bloombox/Java/blob/master/example/src/main/kotlin/io/bloombox/example/kotlin/KotlinClientExample.kt"/>
        </menu>

        <menu name="API Docs">
            <item name="Client (Dokka)" href="client/bloombox/bloombox.client/index.html"/>
            <item name="Schema (Javadoc)" href="apidocs/index.html"/>
        </menu>

        <links>
            <item name="Main Website" href="https://bloombox.io"/>
            <item name="Client for JavaScript" href="https://bloombox.github.io/JS"/>
        </links>

        <breadcrumbs>
            <item name="Bloombox" href="https://bloombox.io"/>
        </breadcrumbs>

        <footer>Copyright © 2018, Momentum Ideas Co. All rights reserved.</footer>
    </body>

    <custom>
        <fluidoSkin>
            <profile>production</profile>
            <skipGenerationDate>true</skipGenerationDate>
            <breadcrumbDivider>»</breadcrumbDivider>
            <topBarEnabled>false</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <topBarIcon>
                <name>Bloombox</name>
                <alt>Bloombox</alt>
                <src>https://storage.googleapis.com/bloom-static/branding/logo-bloombox-v2-pms-muted-small.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <gitHub>
                <projectId>bloombox/Java</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>green</ribbonColor>
            </gitHub>
            <twitter>
                <user>bloomboxIO</user>
                <showUser>true</showUser>
            </twitter>
        </fluidoSkin>
    </custom>
</project>
